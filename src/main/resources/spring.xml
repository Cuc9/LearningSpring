<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

        <bean id="client" class="beans.Client">
                <constructor-arg value="1"/>
                <constructor-arg value="Vasya Pupkin"/>
        </bean>

        <bean id="eventLogger" class="loggers.ConsoleEventLogger" />

        <bean id="app" class="App">
                <constructor-arg ref="fileEventLogger"/>
                <constructor-arg ref="client"/>
        </bean>

        <bean id="event" class="beans.Event" scope="prototype">
                <constructor-arg>
                        <bean class="java.util.Date" scope="prototype"/>
                </constructor-arg>
                <constructor-arg>
                        <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
                </constructor-arg>
        </bean>
        <bean id="fileEventLogger" class="loggers.FileEventLogger">
                <constructor-arg>
                        <bean class="java.io.File" scope="singleton">
                                <constructor-arg value="D:\JAVA\LearningSpring\src\main\resources\LogFile.txt"/>
                        </bean>
                </constructor-arg>
        </bean>

</beans>